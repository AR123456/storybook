<h1>Edit Recipe</h1>

<form action="/recipes/{{recipe.id}}?_method=PUT" method="post" class="col s12">
  {{!-- need the hidden input feild with the methond overide _method  --}}
  <input type="hidden" name="_method" value="PUT">
  <div class="row">
    <div class="input-field">
      <input type="text" name="label" value="{{recipe.label}}">
      <label for="label">label</label>
    </div>
  </div>

  <div class="form-group">
    <div class="input-field">
      <select name="public">
        {{#select recipe.public}}
        <option value="public" selected>Public</option>
        <option value="private">Private</option>
        <option value="unpublished">Unpublished</option>
        {{/select}}
      </select>
      <label for="public">public</label>
    </div>
  </div>
  <p>
    <div class="form-check">
      <input class="form-check-input" type="checkbox" name="allowComments" class="filled-in" id="filled-in-box"
        {{#if recipe.allowComments}} checked="checked" {{/if}}>
      <label for="filled-in-box">Allow Comments</label>
    </div>
  </p>
  <div class="form-group">
    <div class="input-field">
      <h5>Tell Us Your Recipe:</h5>
      <textarea name="body">{{recipe.body}}</textarea>
    </div>
  </div>

  <input type="submit" value="Save" class="btn btn-outline-primary">
</form>