<div class="jumbotron">
  <h1>Welcome {{user.name}}</h1>
  <h4>Your Recipes</h4>
  {{#if user}}
  {{> _add-btn}}
  {{/if}}
</div>
{{#if stories}}
<table class="table table-hover">
  <thead class="thead-light">
    <tr>
      <th>Title</th>
      <th>Date</th>
      <th>Status</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    {{#each stories}}
    <tr>
      <td><a href="/stories/show/{{id}}">{{title}}</a></td>
      <td>{{formatDate data 'MMMM do YYYY'}}</td>
      <td><span class="dash-status">{{status}}</span></td>
      <td>
        <a class="btn btn-outline-primary btn-sm" href="/stories/edit/{{id}}"><i class="fas fa-pencil-alt"></i> Edit</a>

        <form action="/stories/{{id}}?_method=DELETE" method="post" id="delete-form">
          <input type="hidden" name="_method" value="DELETE">

          <button type="submit" class="btn btn-outline-primary btn-sm"><i class="far fa-trash-alt"></i> Delete</button>
        </form>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
{{else}}
<p>You have added any recipes yet</p>
{{/if}}