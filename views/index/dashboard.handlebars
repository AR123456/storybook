<div class="jumbotron">
  <h1>Welcome {{user.name}}</h1>
  <h4>Your Recipes</h4>
  {{#if user}}
  {{> _add-btn}}
  {{> _scrape-btn}}
  {{/if}}
</div>
{{#if recipes}}
<table class="table table-hover">
  <thead class="thead-light">
    <tr>
      <th>label</th>
      <th>Date</th>
      <th>public</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    {{#each recipes}}
    <tr>
      <td><a href="/recipes/show/{{id}}">{{label}}</a></td>
      <td>{{formatDate data 'MMMM do YYYY'}}</td>
      <td><span class="dash-public">{{public}}</span></td>
      <td>
        <a class="btn btn-outline-primary btn-sm" href="/recipes/edit/{{id}}"><i class="fas fa-pencil-alt"></i> Edit</a>
        {{!-- method overide to take care of delete from the form  --}}
        <form action="/recipes/{{id}}?_method=DELETE" method="post" id="delete-form">
          <input type="hidden" name="_method" value="DELETE">

          <button type="submit" class="btn btn-outline-primary btn-sm"><i class="far fa-trash-alt"></i> Delete</button>
        </form>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
{{else}}
<p>You have added any recipes yet</p>
{{/if}}