<h1>Stories</h1>
<div class="row">
  {{#each stories}}
  <div class="col s-12 ">
    <div class="card">
      <div class="card-body">
        {{#if user}}
        {{{editIcon user.id ../user.id id}}}
        {{/if}}
      </div>
      <div class="card-title">
        <h5>{{title}}</h5>
        <p class="card-text">{{stripTags (truncate body 150)}}</p>
        <br>
        <div class="chip">
          <img src="{{user.image}}">
          <a href="/stories/user/{{user.id}}">{{user.firstName}} {{user.lastName}}</a>
        </div>
      </div>
      <div class="card-action center-align">
        <a class="btn btn-primary" href="/stories/show/{{id}}">See More</a>
      </div>
    </div>
  </div>
  {{else}}
  <p>No stories found</p>
  {{/each}}
</div>