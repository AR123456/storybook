<h1>Edit Story</h1>

<form action="/stories/{{story.id}}?_method=PUT" method="post" class="col s12">
  {{!-- need the hidden input feild with the methond overide _method  --}}
  <input type="hidden" name="_method" value="PUT">
  <div class="row">
    <div class="input-field">
      <input type="text" name="title" value="{{story.title}}">
      <label for="title">Title</label>
    </div>
  </div>

  <div class="form-grou">
    <div class="input-field">
      <select name="status">
        {{#select story.status}}
        <option value="public" selected>Public</option>
        <option value="private">Private</option>
        <option value="unpublished">Unpublished</option>
        {{/select}}
      </select>
      <label for="status">Status</label>
    </div>
  </div>
  <p>
    <div class="form-check">
      <input class="form-check-input" type="checkbox" name="allowComments" class="filled-in" id="filled-in-box"
        {{#if story.allowComments}} checked="checked" {{/if}}>
      <label for="filled-in-box">Allow Comments</label>
    </div>
  </p>
  <div class="form-group">
    <div class="input-field">
      <h5>Tell Us Your Story:</h5>
      <textarea name="body">{{story.body}}</textarea>
    </div>
  </div>

  <input type="submit" value="Save" class="btn btn-outline-primary">
</form>